@model http5204_mypassion_project_n00652674.Models.ViewModels.ShowMember

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div class="container">
    <div class="row">
        <div class="col-sm-12">@Html.ActionLink("Delete", "DeleteConfirm", new { id = Model.member.MemberID })</div>
        <hr />
        @{
            //Use server rendering to determine an image
            string pic = "/Content/Members/default.jpg";
            string alt = "No Profile Picture Provided.";
            if (Model.member.MemberHasPic)
            {
                pic = "/Content/Members/" + Model.member.MemberID + "." + Model.member.Picture;
                alt = "Profile shot of " + Model.member.FirstName + " " + Model.member.LastName;

            }
        }
        <div class="col-sm-3 detailsimgSize">

            <img class="detailsimgSize" src="@pic" alt="@alt" />
        </div>
        <div class="col-sm-9">
            <dl class="dl-horizontal">


                <dt>
                    @Html.DisplayNameFor(model => model.member.FirstName)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.member.FirstName)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.member.LastName)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.member.LastName)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.member.Title)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.member.Title)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.member.Email)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.member.Email)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.member.SalonID)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.member.SalonID) - @Html.DisplayFor(model => model.salon.SalonName)
                </dd>
            </dl>
        </div>



    </div>
    <p>
        @Html.ActionLink("Edit", "Edit", new { id = Model.member.MemberID }) |
        @Html.ActionLink("Back to List", "List")
    </p>
</div>
