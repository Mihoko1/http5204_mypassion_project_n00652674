@model http5204_mypassion_project_n00652674.Models.ViewModels.ShowMember

@{
    ViewBag.Title = "Details";
}

<h2>Member Details</h2>
<div class="col-12">

    @Html.ActionLink("Back to List", "List")
</div>
<hr />

<div>
    <button class="floatR brn btn-danger">@Html.ActionLink("Delete", "DeleteConfirm", new { id = Model.member.MemberID })</button>

</div>

<div class="container">

    <div class="row">
        <div class="col-xs-12">




            @{
                //Use server rendering to determine an image
                string pic = "/Content/Members/default.jpg";
                string alt = "No Profile Picture Provided.";
                if (Model.member.MemberHasPic)
                {
                    pic = "/Content/Members/" + Model.member.MemberID + "." + Model.member.Picture;
                    alt = "Profile shot of " + Model.member.FirstName + " " + Model.member.LastName;

                }
            }
            <div class="col-xs-4 detailsimgSize">

                <img class="detailsimgSize" src="@pic" alt="@alt" />
            </div>
            <div class="col-xs-8 info">


                <div class="itemContainer">
                    <div class="fontBold">
                        Name
                    </div>
                    <div class="fontLarger">
                        @Html.DisplayFor(model => model.member.FirstName)  @Html.DisplayFor(model => model.member.LastName)
                    </div>
                </div>
                <div class="itemContainer">
                    <div class="fontBold">
                        Email
                    </div>
                    <div class="fontLarger">
                        @Html.DisplayFor(model => model.member.Email)
                    </div>
                </div>

                <div class="itemContainer">
                    <div class="fontBold">
                        Title
                    </div>
                    <div class="fontLarger">
                        @Html.DisplayFor(model => model.member.Title)
                    </div>

                </div>

                <div class="itemContainer">
                    <div class="fontBold">
                        Salon ID

                    </div>
                    <div class="fontLarger">
                        @Html.DisplayFor(model => model.member.SalonID) - @Html.DisplayFor(model => model.salon.SalonName)

                    </div>

                </div>
                <div class="itemContainer">
                    <button class="btn btn-default"> @Html.ActionLink("Edit", "Edit", new { id = Model.member.MemberID })</button>
                </div>


            </div>


        </div>


    </div>
</div>